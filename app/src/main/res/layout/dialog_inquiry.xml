<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/black_1">

    <TextView
        android:id="@+id/inquiry_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inquiry_dialog_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/inquiry_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/inquiry_email_hint"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:padding="8dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/inquiry_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/inquiry_message_hint"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:padding="8dp"
        android:background="@drawable/edittext_background"
        android:minHeight="100dp"
        android:gravity="top"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/inquiry_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/inquiry_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send" />

    </LinearLayout>

</LinearLayout>
